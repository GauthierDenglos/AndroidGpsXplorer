<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".statActivity">

    <com.javahelps.trailxplorer.CustomView
        android:layout_width="match_parent"
        android:layout_height="300dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="10dp"
        android:text="Graph of your speed  during the time."
        android:layout_marginBottom="55dp"
        android:layout_marginLeft="100dp"
        android:textColor="#808080"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/aveSpeed"
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:layout_marginLeft="30dp"
            android:layout_marginBottom="10dp"
            android:text="Average speed = "
            android:textColor="@android:color/black"
            android:textSize="18dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/maxDist"
            android:text="Total distance = "
            android:textSize="18dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="30dp"
            android:textColor="@android:color/black"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/maxTime"
            android:text="Time taken = "
            android:textSize="18dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="30dp"
            android:textColor="@android:color/black"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/minAlt"
            android:text="Minimum altitude = "
            android:textSize="18dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="30dp"
            android:textColor="@android:color/black"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/maxAlt"
            android:text="Maximum altitude = "
            android:textSize="18dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="30dp"
            android:textColor="@android:color/black"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/caloriesburn"
            android:text="Calories burn = "
            android:textSize="18dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="30dp"
            android:textColor="@android:color/black"/>

    </LinearLayout>


</LinearLayout>