<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".statActivity">

    <com.javahelps.trailxplorer.CustomView
        android:layout_width="match_parent"
        android:layout_height="300dp" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:text="Graph of your speed  during the time "
        android:layout_marginBottom="30dp"
        android:layout_marginLeft="40dp"
        android:textColor="@android:color/black"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/aveSpeed"
            android:text="Average speed = "
            android:textSize="18dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="70dp"
            android:textColor="@android:color/black"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/maxDist"
            android:text="Total distance = "
            android:textSize="18dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="70dp"
            android:textColor="@android:color/black"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/maxTime"
            android:text="Time taken = "
            android:textSize="18dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="70dp"
            android:textColor="@android:color/black"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/minAlt"
            android:text="Minimum altitude = "
            android:textSize="18dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="70dp"
            android:textColor="@android:color/black"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/maxAlt"
            android:text="Maximum altitude = "
            android:textSize="18dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="70dp"
            android:textColor="@android:color/black"/>

</LinearLayout>